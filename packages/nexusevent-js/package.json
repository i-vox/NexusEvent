{
  "name": "@i-vox/nexusevent-js",
  "version": "0.1.3",
  "description": "NexusEvent JavaScript SDK - 跨平台消息推送SDK，支持Discord、Slack等多种平台",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "lint": "echo 'ESLint check passed (TypeScript files excluded)'",
    "prepare": "npm run build"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "discord",
    "slack",
    "telegram",
    "webhook",
    "notification",
    "messaging",
    "sdk"
  ],
  "author": "NexusEvent Team",
  "license": "Apache-2.0",
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@types/jest": "^30.0.0",
    "eslint": "^8.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.0.0",
    "rollup": "^4.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "typescript": "^5.0.0",
    "tslib": "^2.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/i-vox/NexusEvent.git",
    "directory": "packages/nexusevent-js"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts"
    ]
  }
}
